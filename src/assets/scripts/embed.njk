class WebringBanner extends HTMLElement {
  constructor() {
    super();

    this.ringtitle = '{{ meta.title }}';
    this.url = '{{ meta.url }}';
    this.membercount = {{ members | length }};

    this.shadowObj = this.attachShadow({ mode: 'open' });
    this.render();
  }

  getStyles() {
    return `
      <style>
        :host {
          display: block;
          font-family: monospace;
          font-size: 16px;
          color: #064e3b;
        }

        .webring-banner {
          display: flex;
          border-radius: 6px;
          overflow: hidden;
          box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
          max-width: 800px;
          margin: 1rem auto;
        }

        .webring-banner__side {
          background-color: #e7f9f3; /* lighter mint for side buttons */
          padding: 1rem;
          display: flex;
          align-items: center;
          justify-content: center;
          width: 50px;
          cursor: pointer;
          border-right: 1px solid #d1fae5;
        }

        .webring-banner__side:last-child {
          border-left: 1px solid #d1fae5;
          border-right: none;
        }

        .webring-banner__center {
          background-color: #ecfdf5; /* center mint */
          flex: 1;
          text-align: center;
          padding: 1rem 1.5rem;
        }

        .webring-banner__center h3 {
          margin: 0;
          font-size: 1rem;
          font-weight: bold;
          text-decoration: underline;
        }

        .webring-banner__center p {
          margin: 0.5rem 0 0;
          font-size: 1rem;
        }

        .webring-banner__link {
          color: #064e3b;
          text-decoration: none;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .icon {
          width: 24px;
          height: 24px;
          fill: #064e3b;
        }
      </style>
    `;
  }

  getTemplate() {
    return `
      ${this.getStyles()}
      <div class="webring-banner">
        <a href="${this.url}/prev" class="webring-banner__side webring-banner__link" aria-label="Previous site">
          <svg class="icon" viewBox="0 0 24 24"><path d="M15 18l-6-6 6-6" /></svg>
        </a>
        <div class="webring-banner__center">
          <h3>${this.ringtitle}</h3>
          <p>A webring for developers, designers who<br/>passed through Landmark University.</p>
        </div>
        <a href="${this.url}/next" class="webring-banner__side webring-banner__link" aria-label="Next site">
          <svg class="icon" viewBox="0 0 24 24"><path d="M9 6l6 6-6 6" /></svg>
        </a>
      </div>
    `;
  }

  render() {
    this.shadowObj.innerHTML = this.getTemplate();
  }
}

customElements.define('webring-banner', WebringBanner);
